@model IEnumerable<YourNamespace.Models.Customer>

@{
    ViewBag.Title = "Customer List";
}

<h2>Customer List</h2>

<p>
    @Html.ActionLink("Add New Customer", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = customer.CustomerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = customer.CustomerId })
                </td>
            </tr>
        }
    </tbody>
</table>
