@model YourNamespace.Models.Account

@{
    ViewBag.Title = "Add Account";
}

<h2>Add Account</h2>

@using (Html.BeginForm("Create", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label for="AccountNumber">Account Number</label>
        @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="CustomerId">Customer ID</label>
        @Html.TextBoxFor(m => m.CustomerId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Balance">Balance</label>
        @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="AccountType">Account Type</label>
        @Html.TextBoxFor(m => m.AccountType, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Add Account</button>
}
